<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
    <!-- Allow the app to open network sockets -->
    <key>com.apple.security.network.client</key>
    <true/>

    <!-- Allow the app to act as a network server (for listening) -->
    <key>com.apple.security.network.server</key>
    <true/>

    <!-- Allow reading/writing to user-selected files (for config files) -->
    <key>com.apple.security.files.user-selected.read-write</key>
    <true/>

    <!-- Required for hardened runtime to disable library validation -->
    <!-- Needed when app is launched via sudo/osascript -->
    <key>com.apple.security.cs.disable-library-validation</key>
    <true/>

    <!-- Allow loading unsigned executable memory (for some crypto operations) -->
    <key>com.apple.security.cs.allow-unsigned-executable-memory</key>
    <true/>
</dict>
</plist>
